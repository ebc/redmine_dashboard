<table class="list issues" style="margin-bottom: 14px;">
  <tbody>
    <tr style="background-color: #EEE;">
      <!--
      <th title="&quot;#&quot;">#</th>
      -->
      <th title="&quot;Stituação&quot;">Stituação</th>
      <th title="&quot;Tarefa&quot;" style="text-align: left;">Tipo</th>      
      <th title="&quot;Descrição&quot;">Descrição</th>
      <th title="&quot;Terminado&quot;">Terminado</th>
    </tr>
  </tbody>

  <tfoot>
    <tr style="background-color: #EEE; ">
      <td colspan="3">
        <span style="font-weight: bold; ">432 tarefas</span>
      </td>
      <td style="text-align: right; font-weight: bold;   ">
        52,31%
      </td>
    </tr>
  </tfoot>

  <tbody> 
    <% reset_cycle %>
    <% @issues.each do |issue| %>         
    <tr id="issue-<%= issue.id %>" class="<%= cycle('', 'alt') %>" >
      <!--
      <td class="id" style="text-align: left; ">
        <a href="<%= issue_path(issue) %>" target="_blank" style="font-size: 12px; font-family: Arial,sans-serif;"><%= issue.id %></a>        
      </td>
      -->
      <td class="description" style="width: 80%; text-align: left; ">
        <a href="<%= issue_path(issue) %>" target="_blank" style="font-size: 12px; font-family: Arial,sans-serif;"><%= truncate("#{issue}", 55) %></a>    
         
      </td>
      <td class="tracker" >
        <%= issue.tracker %>
      </td>
      <td class="status" style="width: 20%; text-align: left; ">
        <%= h(issue.status) %>
      </td>      
      <td class="done_ratio" style="text-align: right;">
        <%= "#{issue.done_ratio}%" %>
      </td>
    </tr>  
    <% end %>         
  </tbody>     
</table>
<p class="pagination">
  <%= pagination_links_full @issue_pages, @issue_count %>
</p>


