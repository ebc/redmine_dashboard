<% form_tag({:controller => controller_name, :action => action_name, :project_id => @project, :issue_id => @issue}, :method => :get, :id => 'query_form') do %>  

  <ul>                          
      <li><span class="title"><div class="triangle"></div>Filtro<div class="inverse_triangle"></div></span></li>
      <li>
        <span>Projetos</span>                              
      </li>
      <li>
        <div class="inputs">
          <ul id="projectmenu" class="mcdropdown_menu"> 
          <% @project_values.each do |item| %>
            <li rel="<%= item[1] %>">
              <%= item[0] %>
            </li>          
          <% end %>
          </ul>

          <input type="text" name="project_id" id="projects" value=""/>         
        </div>
      </li>
      <li>
        <span>Intervalo</span>
      </li>                            
      <li>
        <table class="filter_table">
          <tr>
            <td class="label">In√≠cio</td>
            <td>
              <%= text_field_tag :from, params[:from], :class =>  "search_field thin datepicker", :autocomplete => "off", :size => 9 %>
              <img alt="Calendar" class="calendar-trigger" id="from_trigger" src="/images/calendar.png">
            </td>
          </tr>
          <tr>
            <td class="label">Fim</td>
            <td>
              <%= text_field_tag :to, params[:to], :class =>  "search_field thin datepicker", :autocomplete => "off", :size => 9 %>
              <img alt="Calendar" class="calendar-trigger" id="to_trigger" src="/images/calendar.png">
            </td>
          </tr>
        </table>                        
      </li>    
      <li>
        <div class="inputs">
          <input type="submit" value="Aplicar" style="width: 152px;">
        </div>
      </li>                         
  </ul>
<% end %><!-- end form filtro -->

<script type="text/javascript"> 
$(document).ready(function (){ 
    $("#projects").mcDropdown("#projectmenu");     
    <% if @project %>
      var dd = $("#projects").mcDropdown();
      dd.setValue(<%= @project.id %>);      
    <% end %>

    $(".mcdropdown").css("width", "150px");
    // var input = $(".mcdropdown input[type='text']")[0];
    // $(input).css("width", "150px");
    // $(input).attr("width", "150px");
}); 
</script>

<script>
  $(function() {
    $( "#from" ).datepicker({
      dateFormat: 'yy/mm/dd',
      defaultDate: "+1w",
      changeMonth: true,
      changeYear: false
    })
  }); 

  $(function() {
    $( "#to" ).datepicker({
      dateFormat: 'yy/mm/dd',
      defaultDate: "+1w",
      changeMonth: true,
      changeYear: false
    })
  }); 
</script>